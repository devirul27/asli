<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutMainWrapper"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/vv"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linerLayoutTabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="3">

        <Button
            android:id="@+id/buttonMainTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab"
            android:enabled="false"
            android:text="Main"
            android:textColor="@color/tabTextColor"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonEventTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab"
            android:text="Event"
            android:textColor="@color/buttonTextColor"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonUserTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab"
            android:text="User"
            android:textColor="@color/buttonTextColor"
            android:visibility="visible" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#0C0150">

        <TextView
            android:id="@+id/textViewOutput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Saat ini Tidak Ada Misi"
            android:textColor="#EEFF00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </FrameLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayoutScrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/buttonShowOffers"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/custom_button"
                android:text="Lihat misi / Show Offerwall"
                android:textColor="@color/buttonTextColor"
                android:visibility="visible" />

            <Button
                android:id="@+id/buttonGetDirectPlayVideoAd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/custom_button"
                android:text="Wattch Video"
                android:textColor="@color/buttonTextColor"
                android:visibility="visible" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Managed Currency" />

            <LinearLayout
                android:id="@+id/linearLayoutCurrency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/buttonGetCurrency"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="Cek poin"
                    android:textColor="@color/buttonTextColor" />

                <Button
                    android:id="@+id/buttonSpendCurrency"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="Buka Mode Premium"
                    android:textColor="@color/buttonTextColor" />

                <Button
                    android:id="@+id/buttonAwardCurrency"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="tukar dengan pulsa"
                    android:textColor="@color/buttonTextColor" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Load Video Untuk Mendapat Poin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="3dp">

                <EditText
                    android:id="@+id/inputPlacementName"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:layout_weight="10"
                    android:ems="10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="video_unit"
                    android:textSize="14dp"
                    android:visibility="gone"></EditText>

                <Button
                    android:id="@+id/buttonClearPlacementName"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0"
                    android:background="@drawable/custom_button"
                    android:text="X"
                    android:textColor="@color/buttonTextColor"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutPlacement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="3dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/buttonRequestPlacement"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="Load Misi"
                    android:textColor="@color/buttonTextColor"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/buttonShowPlacement"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:enabled="false"
                    android:text="Show"
                    android:textColor="@color/buttonTextColor"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonPurchase"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/custom_button"
                android:text="Purchase"
                android:textColor="@color/buttonTextColor"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonPurchase2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/custom_button"
                android:text="Purchase (Campaign)"
                android:textColor="@color/buttonTextColor"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonPurchase3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/custom_button"
                android:text="Purchase (with validation)"
                android:textColor="@color/buttonTextColor"
                android:visibility="gone" />

            <Switch
                android:id="@+id/belowConsentAgeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:checked="false"
                android:minWidth="60dp"
                android:minHeight="30dp"
                android:switchMinWidth="60dp"
                android:switchPadding="20dp"
                android:text="Set belowConsentAge"
                android:textColor="@color/buttonTextColor"
                android:textOff=""
                android:textOn=""
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_disable_track"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/linearLayoutSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/sdkVersion"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="left"
                    android:text="tapjoy_sdk_version"
                    android:textColor="@color/buttonTextColor"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewShowSupportWebPage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="end"
                    android:text="@string/supportLink"
                    android:textColor="#0645AD"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFD600"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="3dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kumpulkan hix poin dengan cara menyelesaikan misi, danTukarkan hix poin dengan mode premium atau pulsa"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mode Premium = 100 hix"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pulsa = 50k hix"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button6"
            style="@style/CustomButtonBarButtonStyle"
            android:background="@drawable/vv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>